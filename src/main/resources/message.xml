<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="ru.af.entity.Message" table="message">
        <id name="id" type="int">
            <column name="id" />
            <generator class="identity" />
        </id>
        <property name="body" type="java.lang.String">
            <column name="body" />
        </property>
        <property name="time" type="long">
            <column name="time" />
        </property>
        <property name="userId" type="int">
            <column name="user_id" />
        </property>
    </class>
</hibernate-mapping>
